@model ExamsGenerator.Models.Question

@inject UserManager<ApplicationUser> UserManager

@{
    ViewData["Title"] = "Create question";
}

<h2>Create a new question</h2>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Author" class="control-label">Author: </label>
                <label asp-for="Author" class="control-label"> @UserManager.GetUserName(User)</label>
            </div>
            <div class="form-group">
                <label asp-for="SubjectId" class="control-label">Subject</label>
                <select asp-for="SubjectId" class="form-control" asp-items="ViewBag.SubjectId"></select>
            </div>
            <div class="form-group">
                <label asp-for="LevelOfEducationInternationalId" class="control-label">Education Level</label>
                <select asp-for="LevelOfEducationInternationalId" class="form-control" asp-items="ViewBag.LevelOfEducationInternationalId"></select>
            </div>
            <div class="form-group">
                <label asp-for="DegreeOfDifficultyId" class="control-label">Degree Of Difficulty</label>
                <select asp-for="DegreeOfDifficultyId" class="form-control" asp-items="ViewBag.DegreeOfDifficultyId"></select>
            </div>
            <div class="form-group">
                <label asp-for="QuestionTypeId" class="control-label">Type</label>
                <select asp-for="QuestionTypeId" class="form-control" asp-items="ViewBag.QuestionTypeId"></select>
            </div>
            <div class="form-group">
                <label asp-for="LanguageId" class="control-label">Language</label>
                <select asp-for="LanguageId" class="form-control" asp-items="ViewBag.LanguageId"></select>
            </div>
            <div class="form-group">
                <label asp-for="Text" class="control-label"></label>
                <input asp-for="Text" class="form-control" />
                <span asp-validation-for="Text" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

